@model ebis.Models.produkcni_listy

@{
    ViewBag.Title = "Upravit produkční listy";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>produkcni_listy</legend>

        @Html.HiddenFor(model => model.pk_id)

        <div class="editor-label">
            Jméno aktivity
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.jmeno_aktivity)
            @Html.ValidationMessageFor(model => model.jmeno_aktivity)
        </div>

        <p>
            <input type="submit" value="Uložit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zpět na seznam", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
