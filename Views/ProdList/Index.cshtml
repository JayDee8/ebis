@model IEnumerable<ebis.Models.produkcni_listy>

@{
    ViewBag.Title = "Produkční list - položky";
    WebGrid grid = new WebGrid(Model);
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Přidat položku produkčního listu", "Create")
</p>

@grid.GetHtml(columns:
    grid.Columns
    (
        grid.Column("jmeno_aktivity", "Název aktivity"),
        grid.Column(format: (item) => new HtmlString(Html.ActionLink("Detaily", "Details", new { id = item.pk_id }) + " | " +
                    Html.ActionLink("Upravit", "Edit", new { id = item.pk_id }) + " | " +
                    Html.ActionLink("Smazat", "Delete", new { id = item.pk_id })))
    ))
