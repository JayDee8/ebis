@model ebis.Models.LoginModel

@{
    ViewBag.Title = "Přihlásit se";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Přihlašovací formulář</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)<br />
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)<br />
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <p>
            <button type="submit" class="btn btn-default">Přihlásit se</button>
        </p>
    </fieldset>
    <!--<p>
        @Html.ActionLink("Registrovat", "Register","Account",null, new { style="text-decoration:underline;" }) pokud nemáte účet.
    </p>-->
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
