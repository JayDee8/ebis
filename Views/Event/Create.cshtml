@model ebis.Models.akce

@{
    ViewBag.Title = "Přidat novou akci";
}

<h2>@ViewBag.Title</h2>

@using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
{
    
    @f.ControlGroup().DropDownListFor(m => m.titul_id, new SelectList(ViewBag.tituly, "pk_id", "nazev")).Label().LabelText("Název akce")
    @f.ControlGroup().TextBoxFor(m => m.popis).Label().LabelText("Popis")
    @f.ControlGroup().TextBoxFor(m => m.program).Label().LabelText("Program")
    @f.ControlGroup().TextBoxFor(m => m.datum).Format("{0:dd.MM.yyyy}").HtmlAttributes(new { @class = "datepicker" }).Label().LabelText("Datum")
    @f.ControlGroup().TextBoxFor(m => m.cas).Label().LabelText("Čas")
    @f.ControlGroup().TextBoxFor(m => m.poznamka).Label().LabelText("Poznámka")
    @f.ControlGroup().TextBoxFor(m => m.podminky).Label().LabelText("Zvláštní podmínky")
    <p>
    @f.ControlGroup().CustomControls(Html.Bootstrap().SubmitButton().Text("Přidat"))
    </p>
}

<div>
    @Html.ActionLink("Zpět na seznam", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
