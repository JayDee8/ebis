@model IEnumerable<ebis.Models.kontakty>

@{
    ViewBag.Title = "Kontakty";
    WebGrid grid = new WebGrid(Model);
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Přidat nový kontakt", "Create")
</p>

@grid.GetHtml(columns:
    grid.Columns
    (
        grid.Column("jmeno", "Jméno"),
        grid.Column("prijmeni", "Příjmení"),
        grid.Column("email", "E-mail"),
        grid.Column("telefon", "Telefonní číslo")
    ))