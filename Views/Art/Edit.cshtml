@model ebis.Models.titul

@{
    ViewBag.Title = "Upravit titul";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>titul</legend>

        @Html.HiddenFor(model => model.pk_id)

        <div class="editor-label">
            Název
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nazev)
            @Html.ValidationMessageFor(model => model.nazev)
        </div>

        <div class="editor-label">
            Autor
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.autor)
            @Html.ValidationMessageFor(model => model.autor)
        </div>

        <div class="editor-label">
            Poznámka
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.poznamka)
            @Html.ValidationMessageFor(model => model.poznamka)
        </div>

        <p>
            <input type="submit" value="Uložit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zpět na seznam", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
