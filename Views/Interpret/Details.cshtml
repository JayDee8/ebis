@model ebis.Models.osoby

@{
    ViewBag.Title = "Detaily osoby";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>osoby</legend>
    
    <div class="form-group row">
        <label class="col-md-2 control-label">ID</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.id)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Jméno</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.jmeno)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Příjmení</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.prijmeni)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Telefon</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.telefon)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">E-mail</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.email)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Adresa</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.adresa)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Město</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.mesto)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">PSČ</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.psc)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Národnost</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.narodnost)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Číslo účtu</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.cislo_uctu)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Datum narození</label>
        <div class="col-md-10">@String.Format("{0:dd.MM.yyyy}",@Model.datum_narozeni)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Místo narození</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.misto_narozeni)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">IČ/DIČ</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.ic_dic)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Nástroje</label>
        <div class="col-md-10">
            @{
                var nastroje = "";

                foreach (var nastroj in Model.nastroje.ToList())
                {
                    nastroje += nastroj.zkratka + "\n";
                }
            }
            @Html.Nl2Br(nastroje)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Poznámka</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.poznamka)</div>
    </div>

</fieldset>
<p>
    @Html.ActionLink("Upravit osobu", "Edit", new { id = Model.pk_id }) |
    @Html.ActionLink("Zpět na seznam", "Index")
</p>
