@model ebis.Models.lokace

@{
    ViewBag.Title = "Upravit lokaci";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>lokace</legend>

        @Html.HiddenFor(model => model.pk_id)

        <div class="editor-label">
            Jméno
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.jmeno)
            @Html.ValidationMessageFor(model => model.jmeno)
        </div>

        <div class="editor-label">
            Adresa
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.adresa)
            @Html.ValidationMessageFor(model => model.adresa)
        </div>

        <div class="editor-label">
            GPS
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.gps)
            @Html.ValidationMessageFor(model => model.gps)
        </div>

        <div class="editor-label">
            Odkaz
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.link)
            @Html.ValidationMessageFor(model => model.link)
        </div>

        <p>
            <input type="submit" value="Uložit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zpět na seznam", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
