@model ebis.Models.lokace

@{
    ViewBag.Title = "Detaily lokace";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>lokace</legend>
    
    <div class="form-group row">
        <label class="col-md-2 control-label">Jméno</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.jmeno)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Adresa</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.adresa)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">GPS</label>
        <div class="col-md-10">@Html.DisplayFor(model => model.gps)</div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Odkaz</label>
        <div class="col-md-10"><a href=@Html.DisplayFor(model => model.link) target="_blank">Odkaz na mapu</a></div>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Upravit lokaci", "Edit", new { id=Model.pk_id }) |
    @Html.ActionLink("Zpět na seznam", "Index")
</p>
