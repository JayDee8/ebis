@model ebis.Models.nastroje

@{
    ViewBag.Title = "Upravit nástroj";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>nastroje</legend>

        @Html.HiddenFor(model => model.pk_id)

        <div class="editor-label">
            Název
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.jmeno)
            @Html.ValidationMessageFor(model => model.jmeno)
        </div>

        <div class="editor-label">
            Typ
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.typ)
            @Html.ValidationMessageFor(model => model.typ)
        </div>

        <p>
            <input type="submit" value="Uložit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zpět na seznam", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
